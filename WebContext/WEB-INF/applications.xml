			</set>
		</property>				
	</bean>
	
	<bean id="HydraUz_WebAppBean" class="org.hydra.beans.WebApplication">
		<property name="id" value="HydraUz" />
		<property name="urls">
			<set>
				<!-- ^https?://(www\\.||wap\\.)?hydra\\.uz.* -->
				<value>^https?://(www\\.||wap\\.)?127\.0\.0\.1.*</value>
				<value>^https?://(www\\.||wap\\.)?91\.212\.89\.163.*</value>
				<value>^https?://(www\\.||wap\\.)?hydra\.uz.*</value>
				<value>^https?://(www\\.||wap\\.)?localhost.*</value>
			</set>
		</property>
	    <!-- Set locales -->
	    <property name="locales">
	    	<map>
	    		<entry key="rus" value="Рус"/>
	    		<entry key="eng" value="Eng"/>
	    	</map>
	    </property>
		<!-- Set default locale -->
		<property name="defaultLocale">
			<value>rus</value>
		</property>	    
	</bean>
	
