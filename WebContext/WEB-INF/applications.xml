		<property name="id" value="Test2Uz" />
		<property name="title" value="Test2.Uz - Simple site #2" />
		<property name="urls">
			<set>
				<value>.*(www\.)?test2\.uz.*</value>
			</set>
		</property>		
	    <!-- Set locales -->
	    <property name="locales">
	    	<map>
	    		<entry key="rus" value="Рус"/>
	    		<entry key="uzb" value="Uzb"/>
	    	</map>
	    </property>
		<!-- Set default locale -->
		<property name="defaultLocale">
			<value>rus</value>
		</property>	    
	</bean>
	
	<bean id="Test3Uz_WebAppBean" class="org.hydra.beans.WebApplication">
		<property name="id" value="Test3Uz" />
		<property name="title" value="Test3.Uz - Simple site #3" />
